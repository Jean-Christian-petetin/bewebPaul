{% extends "Admin/base.html.twig" %}

{% block title %}{% endblock %}

{% block body %}
    <section class="well">
        <h1 class="text-center">Géstion des actualités</h1>
    </section>

    <ol class="breadcrumb breadcrumb-arrow">
        <li>
            <a href="?admin/index">Home</a>
        </li>
        <li class="">
            <a href="?admin/news">News</a>
        </li>
        <li class="active">
            <span>Index</span>
        </li>
    </ol>
    <section >
        <div id="messageDelete"></div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Liste des news</h3>
            </div>
            <div class="panel-body">
                <table id="news-list" class="table table-bordered table-responsive">
                    <thead>
                        <tr>
                            <th class="col-md-1">#</th>
                            <th>Titre</th>
                            <th>Auteur</th>
                            <th>Date</th>
                            <th class="col-md-1 text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>0</td>
                            <td>Article de test</td>
                            <td>Qhorin</td>
                            <td>16/05/2014 02:49</td>
                            <td class="text-center">
                                <i class="fa fa-pencil"></i>
                                |
                                <i class="fa fa-trash"></i>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
    <section id="news-add">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Ajouter un article</h3>
            </div>
            <div class="panel-body">
                <form id="news-add-forms" class="form-horizontal" method="post" enctype="multipart/form-data">
                    <input id="add-title" type="text" name="add-title" class="form-control" placeholder="Titre"><br>

                    <!-- <input type="file" accept="image/*"><br> -->
                    <textarea id="add-editor" name="add-editor"></textarea><br>
                    <input id="add-auteur" type="text" class="form-control" name="add-auteur" placeholder="Auteur"><br>
                    <input id="add-etiquettes" type="text" class="form-control" placeholder="Etiquettes" name="add-etiquettes"><br>
                    <button type="button" class="btn btn-primary">Envoyer</button>
                </form>
                <div id="messagePageAdd"></div>
            </div>
        </div>
    </section>

    <input type="hidden" name="api_key" id="api_key" value="4DECDA07CEE9">

{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="js/news-admin.js"></script>

    <script>
        $(function() {
            $('textarea#add-editor').froalaEditor({
                height: 300,
                charCounterCount: false,
                toolbarButtons: [
                    'bold',
                    'italic',
                    'underline',
                    'strikeThrough',
                    'subscript',
                    'superscript',
                    'paragraphFormat',
                    'align',
                    'formatOL',
                    'formatUL',
                    'indent',
                    'outdent',
                    'insertLink',
                    'insertVideo',
                    'undo',
                    'redo'
                ]
            })
        });
    </script>
{% endblock %}
